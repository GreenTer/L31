<h2>Добро пожаловать в Pizza Shop</h2>

<dir class="row">
	<% @products.each do |p| %>
	<div class="col-md-4">
		<div>
			<%= p.description %>
		</div>

		<div>
			<img src="<%= p.path_to_image %>">
		</div>

		<div>
			Цена: <%= p.price %> rub
		</div>

		<div>
			Размер: <%= p.size %> см
		</div>

		<div>
			<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Добавить в корзину</button>
		</div>
	</div>
	<% end %>
</dir>
<br>

<script type="text/javascript">
	
	$(function(){

		update_orders_input();
		update_orders_button();

	});
</script>