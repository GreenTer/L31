<h2>Ваш заказ</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Цена</th>
      <th scope="col">Количество</th>
    </tr>
  </thead>

  <tbody>
  	<%= total_price = 0 %>
  	<%= total_qty = 0 %>
  	<% @items.each do |item| %>
	    <tr>
	      <td><%= item[0].title %></td>
	      <td><%= item[0].price %></td>
	      <td><%= item[1] %></td>
	    </tr>

	    <%= total_price += item[0].price * item[1].to_i %>
	    <%= total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <td>Общее</td>
      <td><%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

<form action="/place_order" method="POST" role="form">
  <input name="order[orders_input]" type="hidden"></input>

    <div class="form-group">
      <label>Ваше имя</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя">
    </div>

    <div class="form-group">
      <label>Ваш телефон</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон">
    </div>

    <div class="form-group">
      <label>Адресс доставки</label>
      <textarea name="order[address]" type="text" class="form-control" placeholder="Ваш адресс"></textarea>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Оформить заказ!</button>
</form>